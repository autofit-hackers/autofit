{
  "files.associations": {
    ".eslintignore": "ignore"
  },

  "eslint.validate": ["javascript", "javascriptreact", "html", "typescriptreact", "typescript"],

  "typescript.tsdk": "./node_modules/typescript/lib",
  "javascript.validate.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "editor.codeActionsOnSave": [
    "source.organizeImports",
    "source.fixAll.eslint",
    "source.fixAll.tslint",
    "source.fixAll"
  ],
  "eslint.format.enable": false,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  "editor.wordWrap": "on",
  "eslint.packageManager": "yarn",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "npm.packageManager": "yarn",

  "files.autoSave": "onFocusChange",

  // to reduce cpu usage of code helper
  "files.watcherExclude": {
    // Default Settings
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,

    // Cache用のディレクトリやファイル
    "**/.cache": true,

    // Buildディレクトリやファイル
    "**/dist": true,
    "**/build": true,

    // 画像や動画用のディレクトリやファイル
    "**/images": true,
    "**/movies": true
  },
  // File Explorerの非表示項目を指定
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.cache": true,
    "**/*.meta": true,
    "**/.DS_Store": true,
    "node_modules": false,
    "**/*.exe": true,
    "**/*.dll": true,
    "**/*.onnx": true
  },
  // ワークスペース検索から除外
  "search.exclude": {
    ".git": true,
    ".eslintcache": true,
    ".erb/dll": true,
    "release/{build,app/dist}": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "package-lock.json": true,
    "*.{css,sass,scss}.d.ts": true,
    "yarn.lock": true
  },

  // todo-tree
  "todo-tree.general.tags": ["TODO", "TICKET", "DISCUSS", "REF", "WARN"],
  "todo-tree.highlights.defaultHighlight": {
    "gutterIcon": true
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "bell-fill",
      "foreground": "#ff9800",
      "iconColour": "#ff9800"
    },
    "TICKET": {
      "icon": "tasklist",
      "foreground": "#00bfff",
      "iconColour": "#00bfff"
    },
    "DISCUSS": {
      "icon": "comment-discussion",
      "foreground": "#af69ef",
      "iconColour": "#af69ef"
    },
    "REF": {
      "icon": "link",
      "foreground": "#00ff00",
      "iconColour": "#00ff00"
    },
    "WARN": {
      "icon": "alert",
      "foreground": "#ffff00",
      "iconColour": "#ffff00"
    }
  },
  "editor.tabSize": 2,
  "cSpell.words": [
    "autofit",
    "BGRA",
    "CUDA",
    "drei",
    "echarts",
    "esbuild",
    "HANDTIP",
    "imread",
    "imshow",
    "Kinect",
    "linewidth",
    "mediapipe",
    "meshline",
    "NFOV",
    "ondataavailable",
    "streamsaver",
    "UNBINNED",
    "uttr"
  ],
  "color-picker.languages": ["typescript"]
}
